<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginFragment">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/activity_login_Container"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imglogo"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp">

                    <RelativeLayout
                        android:id="@+id/activity_login_etusername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/ccp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:ccp_defaultNameCode="IN" />

                            <EditText
                                android:textColor="@color/color_black"
                                android:textColorHint="@color/color_gray_light"
                                android:id="@+id/emobnum"
                                android:fontFamily="@font/sfpro_display_medium"
                                android:padding="8dp"
                                android:background="@drawable/edit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:hint="@string/mobile_no"
                                android:inputType="phone"
                                android:singleLine="true" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/activity_login_etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="8dp">

                        <EditText
                            android:id="@+id/password"
                            android:fontFamily="@font/sfpro_display_medium"
                            android:padding="8dp"
                            android:background="@drawable/edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:textColor="@color/color_black"
                            android:textColorHint="@color/color_gray_light" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/activity_login_rlLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/btnn"
                        android:padding="8dp">

                        <TextView
                            android:fontFamily="@font/sfpro_display_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/activity_login_tvForgotPassword"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp">

                        <TextView
                            android:fontFamily="@font/sfpro_display_bold"
                            android:textSize="12dp"
                            android:textColor="@color/font_sign_text_grey"

                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/forgotpassword"
                            />

                        <TextView
                            android:background="@color/font_sign_text_grey"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/activity_login_tvloginwith"
                        android:fontFamily="@font/sfpro_display_bold"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/loginwith"
                        android:layout_centerInParent="true"
                        />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/activity_login_ivFacebook"
                            android:background="@drawable/ic_facebook"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="3dp"/>
                        <ImageView android:layout_gravity="center"
                            android:id="@+id/activity_login_ivGoogle"
                            android:background="@drawable/ic_google"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_marginStart="3dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>