<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/tvTitleOne"

            android:text="Taluka"

            android:gravity="center_vertical|start"
            android:textAllCaps="true"
            android:paddingStart="20dp"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/white"
            android:textSize="18sp"

            />
        <TextView
            android:textSize="15sp"

            android:textColor="@android:color/white"
            android:fontFamily="@font/arima_madurai_medium"

            android:id="@+id/btnFilterData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:layout_alignParentLeft="true"
            android:text="@string/select_data"

            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:rotation="180"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            />


    </LinearLayout>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewTaluka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        android:queryHint="@string/search_here"
        android:iconifiedByDefault="false"
        android:layout_alignParentTop="true"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_vriety"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:visibility="visible" />

  <!--  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:fontFamily="@font/sfpro_display_bold"
            android:id="@+id/firstbtnnext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_plain"
            android:textColor="@android:color/white"
            android:text="@string/next"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:height="60dp"
            />

    </LinearLayout>-->
    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/uiv3_divider_color" />

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"

        >


        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/green_border"
            android:id="@+id/btnbackVariety"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:text="@string/back"
            android:fontFamily="@font/arima_madurai_medium"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_upside_down"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:id="@+id/btnnextVariety"
            android:fontFamily="@font/arima_madurai_medium"
            android:text="@string/next"
            />


    </LinearLayout>

</LinearLayout>