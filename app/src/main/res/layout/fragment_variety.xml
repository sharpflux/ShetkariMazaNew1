    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvTitleOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Variety"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        android:queryHint="@string/search_here"
        android:iconifiedByDefault="false"
        android:layout_alignParentTop="true"
        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_vriety"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_weight="1.0"
        android:visibility="visible" />





    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/uiv3_divider_color" />


    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:height="40dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sfpro_display_bold"
            android:background="@drawable/btn_backnext"
            android:id="@+id/btnbackVariety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/back"
            android:layout_weight="1"

             />
        <Button
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:height="40dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sfpro_display_bold"
            android:background="@drawable/btn_backnext"
            android:id="@+id/btnFilterData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="@string/select_data"

            />


        <Button
            android:fontFamily="@font/sfpro_display_bold"
            android:id="@+id/btnnextVariety"
            android:background="@drawable/btn_backnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:height="40dp"
            android:text="@string/next"
            android:textColor="@android:color/white" />


    </LinearLayout>

</LinearLayout>