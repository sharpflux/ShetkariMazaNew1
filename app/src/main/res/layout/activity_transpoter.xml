<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TranspoterActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
       android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/edit">

           <!-- <EditText
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_gray_light"
                android:id="@+id/editTransporterType"
                android:fontFamily="@font/sfpro_display_medium"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:hint="Select your Vehicle Type* "
                android:background="@null"
                android:inputType="number" />-->
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_Rtae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"

        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/edit">

            <EditText
                android:id="@+id/edittransporterRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:fontFamily="@font/sfpro_display_medium"
                android:hint="Enter your rate /Km*"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_gray_light" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_add_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btnn"
        android:gravity="center"
        android:padding="08dp"
        android:text="Add New"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp" />




</LinearLayout>