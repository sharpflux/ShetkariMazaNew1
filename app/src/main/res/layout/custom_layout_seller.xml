<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_cartlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    android:layout_marginTop="10dp"

    >

<!--    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/uiv3_divider_color" />-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivsellerplantLogo"
        android:src="@drawable/graps"
        android:layout_gravity="center_horizontal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="5dp"

        />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp">

    <TextView
        android:text="@string/click_here_to_sale_your"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textSize="16sp"
        android:textColor="@color/blackLight"
        android:singleLine="true"
        android:ellipsize="end"

        />

    <TextView
        android:id="@+id/ivsellerplanttype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Grapes"
        android:textSize="13sp"
        android:textColor="@color/grey_4a"
        android:singleLine="true"
        android:ellipsize="end"
        android:fontFamily="@font/sfpro_display_bold"
        />

    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>