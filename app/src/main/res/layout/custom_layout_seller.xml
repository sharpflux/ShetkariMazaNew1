<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_cartlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="0.0dip">

    <View
        android:id="@+id/viewSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/uiv3_divider_color" />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivsellerplantLogo"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/graps"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

    <TextView
        style="@style/ganaral_primarystylesale"
        android:fontFamily="@font/sfpro_display_bold"
        android:text="@string/click_here_to_sale_your" />

    <TextView
        android:id="@+id/ivsellerplanttype"
        style="@style/ganaral_primarystylesale"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sfpro_display_bold"
        android:text="Grapes"/>

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>