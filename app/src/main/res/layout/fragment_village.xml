<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/backgroundlogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvTitleOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/click_here_to_choose_village"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/sfpro_display_medium">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtvillage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/sfpro_display_medium"
            android:hint="@string/enter_your_village_Name"
            android:inputType="none"

            android:textSize="15dp" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="3">


        <Button
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:height="40dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sfpro_display_bold"
            android:background="@drawable/btn_backnext"
            android:id="@+id/btn_backVillage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/back"
            android:layout_weight="1"

            />
        <Button
            android:textSize="20dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:height="40dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/sfpro_display_bold"
            android:background="@drawable/btn_backnext"
            android:id="@+id/btnFilterData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:text="@string/select_data"

            />


        <Button
            android:fontFamily="@font/sfpro_display_bold"
            android:id="@+id/btn_nextVillage"
            android:background="@drawable/btn_backnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:height="40dp"
            android:text="@string/next"
            android:textColor="@android:color/white" />


    </LinearLayout>

</LinearLayout>