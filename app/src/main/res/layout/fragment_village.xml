<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/backgroundlogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"

        android:id="@+id/linearLayout"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/tvTitleOne"

            android:text="Village"

            android:gravity="center_vertical|start"
            android:textAllCaps="true"
            android:paddingStart="20dp"
            android:fontFamily="@font/arima_madurai_medium"
            android:textColor="@color/white"
            android:textSize="18sp"

            />
        <TextView
            android:textSize="15sp"

            android:textColor="@android:color/white"
            android:fontFamily="@font/arima_madurai_medium"

            android:id="@+id/btnFilterData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:layout_alignParentLeft="true"
            android:text="@string/select_data"

            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:rotation="180"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            />


    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sfpro_display_medium"
        android:layout_alignBottom="@+id/linearLayout">

        <EditText
            android:id="@+id/edtvillage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/sfpro_display_medium"
            android:hint="@string/enter_your_village_Name"
            android:inputType="none"

            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >


        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/green_border"
            android:id="@+id/btn_backVillage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:text="@string/back"
            android:fontFamily="@font/arima_madurai_medium"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient_upside_down"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:id="@+id/btn_nextVillage"
            android:fontFamily="@font/arima_madurai_medium"
            android:text="@string/next"
            />


    </LinearLayout>







