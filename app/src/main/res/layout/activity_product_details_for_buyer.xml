<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/fragment_product_details_rlSlider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">

                <include layout="@layout/activity_load" />

            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:focusable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white_tranceparent"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/lr_one"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/sfpro_display_bold"
                        android:id="@+id/tvName"
                        style="@style/ganaral_primarystyle"
                        android:textSize="20dp"
                        android:text="@string/title"/>
                    <TextView
                        android:fontFamily="@font/sfpro_display_medium"
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_3sdp"
                        android:text="@string/description_data"
                        android:textColor="@color/lightGrey"
                        android:textSize="15dp"/>

                    <LinearLayout
                        android:id="@+id/lr_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="+91 "/>
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/sfpro_display_bold"
                            android:id="@+id/tvMobileNo"
                            android:paddingTop="@dimen/_3sdp"
                            android:text="866749536"
                            style="@style/ganaral_greystyle"/>
                        <!-- <TextView
                             android:layout_marginLeft="160dp"
                             android:layout_marginTop="2dp"
                             android:textAllCaps="true"
                             android:textStyle="bold"
                             android:height="40dp"
                             android:textColor="@android:color/white"
                             android:fontFamily="@font/sfpro_display_bold"
                             android:background="@drawable/btn_backnext"
                             android:id="@+id/btnbackVariety"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_alignParentLeft="true"
                            android:drawableLeft="@drawable/ic_call_white"/>-->
                        <Button
                            android:layout_marginLeft="80dp"
                            android:textSize="20dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:height="40dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/sfpro_display_bold"
                            android:background="@drawable/btn_backnext"
                            android:id="@+id/btnbackVariety"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Call"
                            android:layout_weight="1"

                            />
                    </LinearLayout>


                </LinearLayout>


               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.3dp"
                    android:orientation="horizontal"
                    android:paddingEnd="12.7dp"
                    android:paddingStart="15dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Fair"
                        android:textColor="@color/lightGrey"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/rs_479"
                        android:textColor="#707070"
                        android:textSize="13.3sp" />


                </LinearLayout>-->


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:fontFamily="@font/sfpro_display_bold"
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:height="60dp"
            android:background="@drawable/btn_plain"
            android:text="@string/call"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>-->

</LinearLayout>
